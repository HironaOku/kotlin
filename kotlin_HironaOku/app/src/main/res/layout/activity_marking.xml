<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Marking">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/MyStudentMarkingList"
        android:layout_width="382dp"
        android:layout_height="520dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editMarkingTitle" />

    <TextView
        android:id="@+id/textMarkingTitle"
        android:layout_width="146dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:text="Marking for Week 0 "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editMarkingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/textMarkTitle"
        app:layout_constraintStart_toEndOf="@+id/textMarkTitle"
        app:layout_constraintTop_toTopOf="@+id/textMarkTitle" />

    <TextView
        android:id="@+id/textMarkTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:text="Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textMarkingTitle" />

    <Button
        android:id="@+id/buttonDONE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="DONE!!"
        app:layout_constraintStart_toEndOf="@+id/editMarkingTitle"
        app:layout_constraintTop_toTopOf="@+id/editMarkingTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>