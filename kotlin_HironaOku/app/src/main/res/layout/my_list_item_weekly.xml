<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textWeekNum2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F21263A"
        android:lineSpacingExtra="8sp"
        android:text="Week1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearAVG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWkAvg"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Weekly Avarage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textWkAGVscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="000"
            android:textSize="18sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/RowAttendance2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textAttendanceTitle"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Attendance" />

            <TextView
                android:id="@+id/textAttendanceAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:id="@+id/RowCheckbox2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCheckBoxTitle"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <TextView
                android:id="@+id/textCHKAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:id="@+id/RowScore2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score" />

            <TextView
                android:id="@+id/textScoreAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:id="@+id/RowGradeHD2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textGradeHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade(HD/DN..)" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <TextView
                android:id="@+id/textHDAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>

        <TableRow
            android:id="@+id/RowGradeABC2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textGradeABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade(A/B/C..)" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <TextView
                android:id="@+id/textABCAVG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--" />

        </TableRow>
    </TableLayout>

</LinearLayout>