<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/textWeekNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F21263A"
        android:lineSpacingExtra="8sp"
        android:text="Week1"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearAVG"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWkAvg"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:text="Weekly Avarage"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textWkAGVScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="000"
            android:textSize="18sp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/RowAttendance"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textAttendanceTitle"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:text="Attendance" />

            <CheckBox
                android:id="@+id/checkBoxAttendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

        </TableRow>

        <TableRow
            android:id="@+id/RowCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textCheckBoxTitle"
                android:layout_width="139dp"
                android:layout_height="wrap_content"
                android:text="CheckBox" />

            <CheckBox
                android:id="@+id/checkBox_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <CheckBox
                android:id="@+id/checkBox_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <CheckBox
                android:id="@+id/checkBox_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <CheckBox
                android:id="@+id/checkBox_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />

            <CheckBox
                android:id="@+id/checkBox_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false" />
        </TableRow>

        <TableRow
            android:id="@+id/RowScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score" />

            <TextView
                android:id="@+id/textScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="000" />

            <TextView
                android:id="@+id/textScore_Max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/XX" />

        </TableRow>

        <TableRow
            android:id="@+id/RowGradeHD"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textGradeHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade(HD/DN..)" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <TextView
                android:id="@+id/textGradeHDresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--" />

        </TableRow>

        <TableRow
            android:id="@+id/RowGradeABC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp">

            <TextView
                android:id="@+id/textGradeABC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade(A/B/C..)" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":" />

            <TextView
                android:id="@+id/textGradeABCresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="--" />
        </TableRow>
    </TableLayout>

</LinearLayout>